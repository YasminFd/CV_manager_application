@{
}
@model Skill
<form class="mx-5" asp-action="Update" asp-controller="Skill" method="post">
    <div class="mb-3">
        <label for="title" class="form-label" >Name</label>
        <input type="text" asp-for="@Model.Name" class="form-control"  aria-describedby="titleHelp" value="@Model.Name">
        <input type="hidden" asp-for="@Model.ID" class="form-control"  aria-describedby="titleHelp" value="@Model.ID">
    </div>
    <button type="submit" class="btn btn-primary">Add a Note</button>
</form>