<!-- Views/Shared/_Layout.cshtml -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Add any additional CSS or script references here -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-">
            <div class="container">
                <a class="navbar-brand" href="/">Smart CV</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AdminDashboard" asp-action="Register">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AdminDashboard" asp-action="Users">Users</a>
                        </li>
                        <!-- Add more navigation links here -->
                    </ul>
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
        
                @RenderBody()
            

            @RenderSection("Scripts", required: false)
        
    </div>
    <footer class="text-center">
        &copy; @DateTime.Now.Year - My ASP.NET Core App
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add any additional scripts here -->
</body>
</html>
